<div class="col-md-12">
  <%= link_to("New Movie", new_film_path, class: "btn btn-primary pull-right") %>
  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Description</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @films.each do |film| %>
        <tr>
          <td>#</td>
          <td><%= film.title %></td>
          <td><%= film.description %></td>
          <td>
            <%= link_to("Edit", edit_film_path(film), class: "btn btn-default btn-sm") %>
            <%= link_to("Delete", film_path(film), class: "btn btn-default btn-sm",
                          method: :delete, data: { confirm: "Are you sure?"}) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>  
