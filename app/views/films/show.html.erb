<div class="col-md-12">
  <div class="group">
    <span class="pull-right">
      <% if current_user && current_user.is_follower_of?(@film) %>
        <label class="label label-success"> 已收藏 </label>
        <%= link_to("Dislikes", dislikes_film_path(@film), class: "btn btn-default pull-right") %>
      <% else %>
        <label class="label label-warning"> 未收藏 </label>
        <%= link_to("Favorite", favorite_film_path(@film), class: "btn btn-default pull-right") %>
      <% end %>
    </span>
    <% if current_user %>
      <%= link_to("Write a Comment", new_film_comment_path(@film), class: "btn btn-default pull-right") %>
      <% if current_user == @film.user %>
        <%= link_to("Edit", edit_film_path(@film), class: "btn btn-primary pull-right") %>
      <% end %>
    <% end %>
  </div>

  <h2><%= @film.title %></h2>
  <p><%= @film.description %></p>

  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>评论内容</th>
        <th>发表者</th>
        <th>发表时间</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @comments.each do |comment| %>
        <tr>
          <td>#</td>
          <td><%= comment.content %></td>
          <td><%= comment.user.email %></td>
          <td><%= comment.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= will_paginate @commnets %>
  </div>

</div>
